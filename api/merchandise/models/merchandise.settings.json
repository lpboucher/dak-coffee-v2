{
  "connection": "default",
  "collectionName": "merchandises",
  "info": {
    "name": "Merchandise"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "slug": {
      "type": "string",
      "index": true
    },
    "name": {
      "type": "component",
      "repeatable": false,
      "component": "translations.name"
    },
    "description": {
      "type": "component",
      "repeatable": false,
      "component": "translations.description"
    },
    "images": {
      "type": "component",
      "repeatable": false,
      "component": "images.product-images"
    },
    "details": {
      "type": "component",
      "repeatable": false,
      "component": "translations.description"
    },
    "price": {
      "type": "component",
      "repeatable": true,
      "component": "prices.base"
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "coffee",
        "merchandise",
        "subscription",
        "clothing"
      ]
    },
    "short": {
      "type": "component",
      "repeatable": false,
      "component": "translations.name"
    },
    "isActive": {
      "type": "boolean",
      "default": true
    }
  }
}
